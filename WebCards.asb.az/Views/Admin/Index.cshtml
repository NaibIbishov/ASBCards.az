@model IEnumerable<DTO.DTOEntity.UserDTO>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox ">
                <div class="ibox-content">
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover dataTables-example">
                            <thead>
                                <tr>
                                    <th>Şirkət</th>
                                    <th>Username</th>
                                    <th>Email</th>
                                    <th>Parol</th>
                                    <th>Yaradılma tarixi</th>
                                    <th>Rol</th>
                                    <th>Redaktə et</th>
                                </tr>
                            </thead>
                            <tbody>
                           
                                @foreach (var item in Model)
                                {
                                    @if (item.RoleId!=1)
                                    {
                                        <tr class="gradeX">
                                            <td>@item.Company</td>
                                            <td>@item.UserName</td>
                                            <td>@item.Email</td>
                                            <td>@item.Password</td>
                                            <td>@(((DateTime)item.Create).ToString("dd-MM-yyyy"))</td>
                                            <td> Adi </td>
                                            <td><a asp-controller="Admin" asp-action="Delete" asp-route-id="@item.ID" class="btn btn-danger">Sil</a></td>
                                        </tr>
                                    }
                                    
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



