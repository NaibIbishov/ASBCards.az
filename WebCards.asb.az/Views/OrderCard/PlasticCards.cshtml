@model IEnumerable<DTO.DTOEntity.OrderCardDTO>

@{
    ViewData["Title"] = "PlasticCards";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox ">
                <div class="ibox-content">
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover dataTables-example">
                            <thead>
                                <tr>
                                    <th>Ad</th>
                                    <th>Soyad</th>
                                    <th>Ata adı</th>
                                    <th>Şirkət</th>
                                    <th>Fincode</th>
                                    <th>Kart No</th>
                                    <th>Status</th>
                                    
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr class="gradeX">
                                        <td>@item.Name</td>
                                        <td>@item.Surname</td>
                                        <td>@item.FatherName</td>
                                        <td>@item.Company</td>
                                        <td>@item.Fincode</td>
                                        <td>@item.CarNo</td>
                                        <td>@item.Status</td>
                                       
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
